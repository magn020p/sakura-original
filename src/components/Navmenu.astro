---
import Navbutton from "../components/Navbutton.astro";
import SoMe from "../components/SoMe.astro";
---

<ul id="navmenu">
  <Navbutton
    label="Home"
    path="https://shimmering-custard-09776a.netlify.app/"
  />
  <Navbutton
    label="Programme"
    path="https://shimmering-custard-09776a.netlify.app/programme/"
  />
  <Navbutton
    label="Map / booths"
    path="https://shimmering-custard-09776a.netlify.app/mapbooths/"
  />
  <Navbutton
    label="About"
    path="https://shimmering-custard-09776a.netlify.app/about/"
  />
