    <SoMe />
  </li>
</ul>
<li id="somemobilerow">
  <SoMe />
</li>

<style>
  @media screen and (min-width: 1025px) {
    ul {
      display: none;
    }
  }
  @media screen and (max-width: 1024px) {
    ul {
      animation: expandnav var(--standard-transition) ease-in-out both;
      display: grid;
      grid-template-columns: auto;
      list-style: none;
      width: 100%;
      max-height: 100vh;
      /* justify-content: start; */
      gap: var(--spacing-normal);
      background-color: var(--bg-navbar);
      /* opacity: 50%; */
      margin: 0 0 0 33%;
      padding: 5% 0;
    }
    #hamburgercontainer svg {
      position: absolute;
      right: var(--spacing-normal);
    }
    #somemobilerow {
      margin-right: var(--spacing-normal);
      height: min-content;
    }

    @keyframes expandnav {
      from {
        transform: scaleX(0%);
      }
      to {
        transform: scaleX(100%);
      }
    }
  }
</style>
